    <div class="product-option">
        <div class="product-title"><%- product.title1 %><span style="color:#a2a2a2;"><%- " "+product.title2 %></span></div>
        <div class="product-review-bar">
            <% for( var ii = 0; ii < 5; ii++){ %>
                <% if(ii < product.review_result.count){ %>
                    <img class="product-star" src="/img/gold_star.png">
                <% } else { %>
                    <img class="product-star" src="/img/gray_star.png">
                <% }; %>
            <% }; %>
            <!-- <img class="product-star" src="/img/gold_star.png"><img class="product-star" src="/img/gold_star.png"><img class="product-star" src="/img/gold_star.png"><img class="product-star" src="/img/gold_star.png"><img class="product-star" src="/img/gray_star.png"> -->
            <span style="color:#747474;margin-left:5px;"><%- product.review_result.count %> Review(s)</span>    |    <span style="color:#9eafff">Add a Review</span>    |    <span>Share:</span>
        <img class="product-social-img" src="/img/facebook.png"> <img class="product-social-img" src="/img/twitter.png">
        </div>
        <div class="product-price">
            <% if( product.old_price > 0 ) { %>
                <sup><%- product.currency %></sup><span style="text-decoration: line-through;"><%- product.old_price %></span><sup style="margin-left:20px;">
            <%}%>
            <%- product.currency %></sup><%- product.price %>
        </div>
        <div class="product-availability">Availability:
            <% if( product.availible ) { %>
                <span style="color:#b2b2b2;font-size: 14px;"> In stock</span>
            <%} else {%>
                <span style="color:#b2b2b2;font-size: 14px;"> Out of stock</span>
            <%}%>
        </div>
        <div class="product-code" data-code="<%= product.productCode %>">Product Code:<span style="color:#b2b2b2;font-size: 14px;"> <%- product.product_code %></span></div>
