    <div class="product-history-menu">
        <div class="back-sign"><img src="/img/left_arrow.png" style="width: 12px;margin-right: 5px;"></div><a href="<%= '/search/'+ product.category.toLowerCase() %>"><%- product.category %></a><div class="back-sign"><img src="/img/left_arrow.png" style="width: 12px;margin-right: 5px;"></div><%- product.title1+" "+product.title2 %>
